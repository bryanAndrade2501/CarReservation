<section class="grid min-h-screen place-items-center p-16">
  <div class="w-50 rounded-md p-4 pt-0 border-2">

    <%= form_with(model: @user) do |form| %>
      <div class="text-center mb-5 mt-8">
        <h1 class="text-2xl font-bold">Registrarse</h1>
      </div>
      <% @user.errors.full_messages.each do |error| %>
          <div><%= error %></div>
      <% end %>
      <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
        <div>
          <%= form.label :name, class: "block text-sm font-semibold leading-6 text-gray-900" %>
          <div class="mt-2.5">
            <%= form.text_field :name, class: "block w-full rounded-md border-0 px-3.5 py-2 ring-1 ring-inset ring-gray-300 focus:outline-none focus:ring-offset focus:ring-blue-800 focus:border-blue-500" %>
          </div>
        </div>
        <div>
          <%= form.label :username, class: "block text-sm font-semibold leading-6 text-gray-900" %>
          <div class="mt-2.5">
            <%= form.text_field :username, class: "block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-2">
          <%= form.label :email, class: "block text-sm font-semibold leading-6 text-gray-900" %>
          <div class="mt-2.5">
            <%= form.email_field :email, class: "block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:outline-none placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-2">
          <%= form.label :password, class: "block text-sm font-semibold leading-6 text-gray-900" %>
          <div class="mt-2.5">
            <%= form.password_field :password, class: "block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>

      <div class="mt-8 text-right">
        <%= form.submit "Registrarse", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <h1 class="text-sm">Ya tienes una cuenta? <%= link_to 'Iniciar SesiÃ³n' ,new_session_path, class: 'text-blue-800' unless Current.user %></h1>
  </div>
</section>

<section>
    <div class="bg-white flex items-center justify-center px-12 pt-12">
      <h1 class="text-2xl font-bold mt-10">Editar</h1>
    </div>
    <div class="flex items-center justify-center px-12">
      <div class="mx-auto w-full bg-white">
        <%= form_with model: @car, html: { enctype: "multipart/form-data" } do |form| %>
          <div class="py-6 px-9">
            <% @car.errors.full_messages.each do |error| %>
              <div><%= error %></div>
            <% end %>

            <div class="grid md:grid-cols-2 md:gap-6">
              <div class="relative z-0 w-full mb-5 group">
                <%= form.label :marca, class: "block mb-2 text-sm font-medium text-gray-600" %>
                <%= form.text_field :marca, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-zinc-800 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-zinc-800 peer" %>
              </div>
              <div class="relative z-0 w-full mb-5 group">
                <%= form.label :modelo, class: "block mb-2 text-sm font-medium text-gray-600" %>
                <%= form.text_field :modelo, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-zinc-800 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-zinc-800 peer" %>
              </div>
            </div>

            <div class="grid md:grid-cols-2 md:gap-6">
              <div class="relative z-0 w-full mb-5 group">
                <%= form.label :anio, class: "block mb-2 text-sm font-medium text-gray-600" %>
                <%= form.number_field :anio, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-zinc-800 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-zinc-800 peer" %>
              </div>
              <div class="relative z-0 w-full mb-5 group">
                <%= form.label :capacidad, class: "block mb-2 text-sm font-medium text-gray-600" %>
                <%= form.number_field :capacidad, class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-zinc-800 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-zinc-800 peer" %>
              </div>
            </div>

            <div class="grid md:grid-cols-2 md:gap-6">
              <div class="relative z-0 w-full mb-5 group">
                <%= form.label :preciodiario, class: "block mb-2 text-sm font-medium text-gray-600" %>
                <%= form.number_field :preciodiario, step: '0.01', class: "block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-zinc-800 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-zinc-800 peer" %>
              </div>
            </div>

            <div class="grid md:grid-cols-2 md:gap-6">
              <div class="relative z-0 w-full mb-5 group">
                <%= form.label :type, "Tipo de auto", class: "block mb-2 text-sm font-medium text-gray-600" %>
                <%= form.collection_select :type_id, Type.all.order(name: :asc), :id, :name, { prompt: "Seleccione un tipo" }, { class: "text-sm rounded-lg block w-full p-2.5 bg-zinc-800 text-white" } %>
              </div>
              <div class="relative z-0 w-full mb-5 group">
                <%= form.label :transmision, "Tipo de transmisión", class: "block mb-2 text-sm font-medium text-gray-600" %>
                <%= form.select :transmision, ['Automática', 'Manual'], { prompt: "Seleccione un tipo" }, class: "text-sm rounded-lg block w-full p-2.5 bg-zinc-800 text-white" %>
              </div>
            </div>

            <div>
              <label class="block mb-2 text-sm font-medium text-gray-900" for="file_input">Subir Imágenes</label>
              <%= form.file_field :images, multiple: true, class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-zinc-800 dark:text-gray-400 focus:outline-none dark:bg-zinc-800 dark:border-zinc-800 dark:placeholder-gray-400" %>
            </div>

            <div class="mt-8 text-center">
              <%= form.submit "Guardar", class: "bg-zinc-800 text-white py-1 px-2 rounded-full font-bold hover:bg-blue-800" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
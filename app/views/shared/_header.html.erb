<header class="py-2 px-10 flex items-center fixed top-0 w-full justify-between bg-zinc-800 text-white">
    <nav>
        <ul class="flex text-sm [&>li>a]:inline-block [&>li>a]:px-4  [&>li>a]:py-2">
            <%= link_to root_path do %>
            <img class="h-10 bg-white" src="https://png.pngtree.com/png-clipart/20210718/original/pngtree-red-car-icon-png-image_6545398.jpg" alt="logo" />
            <% end %>
            <li><%= link_to 'Autos' ,cars_path %></li>
            <li><%= link_to 'Contactos' ,contact_path %></li> <!-- Este es el nuevo enlace a la página de contactos -->
            <li><%= link_to 'Reservas' ,reservations_path if Current.user %></li>
            <li><%= link_to 'Agregar Auto' ,new_car_path if Current.user&.admin %></li>
        </ul>
    </nav>
    <nav>
        <ul class="flex text-sm [&>li>a]:inline-block [&>li>a]:px-4  [&>li>a]:py-2">
            <li><%= link_to 'Iniciar Sesión' ,new_session_path unless Current.user %></li>
            <li><%= link_to 'Registrarse' ,new_user_path unless Current.user %></li>
            <li><%= link_to 'Mensajes', rooms_path if Current.user%></li>
            <li><%= link_to 'Usuarios', admin_index_path if Current.user&.admin%></li>
            <li><%= link_to 'Cerrar sesión', session_path(Current.user.id), data: {turbo_method: :delete}, class: "btn btn-danger" if Current.user %></li>
        </ul>
    </nav>
</header>
